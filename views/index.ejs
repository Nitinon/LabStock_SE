<% include ./partials/header%>
    <link rel="stylesheet" type="text/css" href="stylesheet/testall.css">
    <link rel="stylesheet" type="text/css" href="stylesheet/tump-btn.css">
    <link href="https://fonts.googleapis.com/css?family=Athiti" rel="stylesheet">

    </head>

    <body>
        <div id="wrapper">
            <div id="content">
                <%include ./partials/navbar%>
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="container2">
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="slide-01.jpg" alt="New York" width="1200" height="700">
                                    <div class="carousel-caption">
                                        <h3>New York</h3>
                                        <p>The atmosphere in New York is lorem ipsum.</p>
                                    </div>
                                </div>

                                <div class="item">
                                    <img src="slide-03.jpg" alt="Chicago" width="1200" height="700">
                                    <div class="carousel-caption">
                                        <h3>Chicago</h3>
                                        <p>Thank you, Chicago - A night we won't forget.</p>
                                    </div>
                                </div>

                                <div class="item">
                                    <img src="slide-04.jpg" alt="Los Angeles" width="1200" height="700">
                                    <div class="carousel-caption">
                                        <h3>Nong Pam</h3>
                                        <p>น้องแพมน่ารักมากๆครับ</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <%include ./partials/categoryBar%>

                        <script>
                            $('#<%=category%>_tab').addClass("Active");
                        </script>

                        <%if(error && error.length>0){%>
                            <div class="container" style="margin-top:60px; margin-bottom: 1px">
                                <div class="alert alert-danger" role="alert">
                                    <%=error%>
                                </div>
                            </div>
                            <%}%>
                                <%if(success && success.length>0){%>
                                    <div class="container" style="margin-top:60px; margin-bottom: 1px">
                                        <div class="alert alert-success" role="alert">
                                            <%=success%>
                                        </div>
                                    </div>
                                    <%}%>


                                        <div class="container">
                                            <BR>
                                            <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                                                <%items.forEach(function(item){%>
                                                    <div class="col-lg-2 col-md-6 col-xs-12">
                                                        <div class="thumbnail">
                                                            <%if(edit){%>
                                                                <div class="btn-item">
                                                                    <a class="btn btn-danger btn-md " data-toggle="modal" href="/delItems/<%=item._id%>">X</a>
                                                                </div>
                                                                <%}%>
                                                                    <div class="center-cropped">

                                                                        <img class="itemPic" src="<%=item.originalname%>" alt="Paris">
                                                                    </div>
                                                                    <div class="itemName">
                                                                        <p><strong><%=item.name%></strong></p>
                                                                    </div>
                                                                    <div class="btn-item">
                                                                        <%if(edit){%>
                                                                            <a id="addCart_<%=item.name%>" class="btn btn-warning btn-md " data-toggle="modal" href="/editItems/success">Exit
                                                                                Edit</a>
                                                                            <a class="btn btn-primary btn-md " data-toggle="modal" href="/editItems/<%=item._id%>">Edit</a>
                                                                            <%}else{%>
                                                                                <%if(item.qty!=0){%>
                                                                                    <button class="btn btn-success btn-md " data-toggle="modal" data-target="#myModal2<%=item._id%>">Add</button>
                                                                                    <!-- <button class="btn btn-success btn-md " data-toggle="modal" data-target="#myModal2">Add</button> -->
                                                                                    <button class="btn btn-warning btn-md " data-toggle="modal" data-target="#myModal2">more
                                                                                        detail</button>
                                                                                    <%}else{%>
                                                                                        <p class="out-of-stock">out of stock</p>
                                                                                        <%}%>
                                                                                            <%}%>
                                                                    </div>

                                                        </div>
                                                    </div>
                                                    <%})%>

                                            </div>
                                            <%items.forEach(function(item){%>

                                                <div class="modal fade" id="myModal2<%=item._id%>" role="dialog">
                                                    <div class="modal-dialog">
                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4><span class="glyphicon glyphicon-folder-open"></span>
                                                                    :Items name <%=item.name%>
                                                                </h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="/addCart/<%=item._id%>" method="POST">
                                                                    <%if(item.type=="ID"){%>
                                                                        <select name="itemID" id="">
                                                                            <%item.itemID.forEach(function(ID){%>
                                                                                <option value="<%=ID%>"><%=ID%></option>
                                                                            <%})%>
                                                                        </select>
                                                                    <%}else{%>
                                                                        <input name="qty" type="text">
                                                                    <%}%>
                                                                    <input type="submit">
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <%})%>

                                                    <% include ./partials/modalLogin %>


                                        </div>
                                        <% include ./partials/footer %>
            </div>

    </body>

    </html>